{
  "name": "lightning",
  "description": "This lightning role uses make and an install profile to install vanilla the vanilla lightning profile.",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "default_attributes": {},
  "override_attributes": {
    "drupal": {
      "sites": {
        "lightning": {
          "active": true,
          "deploy": {
            "action": ["deploy", "install"]
          },
          "drush_make": {
            "api": "2",
            "files": {
              "default": "build-lightning.make",
              "core": "drupal-org-core.make"
            },
            "template": false
          },
          "drupal": {
            "settings": {
              "profile": "lightning"
            }
          },
          "repository": {
            "host": "drupal.org",
            "uri": "http://git.drupal.org/project/lightning.git",
            "revision": "7.x-1.x"
          }
        }
      }
    }
  }
}
